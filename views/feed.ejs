<% include ./partials/header.ejs %>
<div class="w-full min-h-screen bg-zinc-800 px-10 py-8 text-white">
    <div class="cards flex flex-wrap gap-3">
        <% posts.forEach(function(elem){ %>
            <div class="card w-77">
                <div class="w-full h-90 bg-zinc-700 rounded-lg overflow-hidden">
                    <img class="w-full h-full object-cover" src="/images/uploads/<%= elem.image %>" alt="">
                </div>
                <h5 class="mt-2 text-sm"><%= elem.title %></h5>
                
                <% if (elem.user && elem.user.username) { %>
                    <h6 class="text-xs font-semibold opacity-50">@<%= elem.user.username %></h6>
                <% } else { %>
                    <h6 class="text-xs font-semibold text-red-400 opacity-50">User not found</h6>
                <% } %>
            </div>
        <% }) %>
    </div>
</div>
<% include ./partials/footer.ejs %>
